{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "vite",
  "redirects": [
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "volksways.in"
        }
      ],
      "destination": "https://volksways.com/$1",
      "permanent": true
    },
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "host", 
          "value": "www.volksways.in"
        }
      ],
      "destination": "https://volksways.com/$1",
      "permanent": true
    }
  ]
}